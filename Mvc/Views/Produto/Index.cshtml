@model IEnumerable<Dominio.Entidades.Produto>

  <h2>Todas as Produtos</h2>

  <a href="/Produto/Salvar" class="btn">Novo Produto</a>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Categoria</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Nome</td>
              <td>@item.Categoria.Nome</td>
              <td>
                <a href="/Produto/Editar/@item.Id" class="btn">Editar</a>
              </td>
              <td>
                <a href="/Produto/Excluir/@item.Id" class="btn">Excluir</a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>